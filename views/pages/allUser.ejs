<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard</title>
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/dstyle.css">
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
        <div class="container">
            <a href="/" class="navbar-brand">welcome <%= user.fullName %></a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item px-2">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <% if (userType== 'admin') { %>
                    <li class="nav-item px-2">
                        <a href="/users" class="nav-link active">All Users</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/dashboard" class="nav-link active">Dashboard</a>
                    </li>
                    <% } %>

                </ul>

                <ul class="navbar-nav ml-auto">
                    <% if (userType== 'admin') { %>
                    <li class="nav-item dropdown mr-3">
                        <a href="#" class="nav-link">
                            <i class="fa fa-user"></i> Welcome Administrator
                        </a>
                    </li>
                    <% } %>

                    <li class="nav-item">
                        <a href="/logout" class="nav-link">
                            <i class="fa fa-user-times"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header id="main-header" class="py-2 bg-primary text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1><i class="fa fa-pencil"></i>Task Overview</h1>
                </div>
            </div>
        </div>
    </header>

    <div class="container flash-message mt-5 text-center">

        <% if(success_messages && success_messages.length > 0) { %>
        <div class="alert alert-success stay-small text-center">
            <strong><%= success_messages %></strong>
        </div>
        <% } %>

        <% if(error_messages && error_messages.length > 0) { %>
        <div class="alert alert-danger stay-small text-center">
            <strong> <%= error_messages %> </strong>
        </div>
        <% } %>
    </div>

    <% if (userType == "admin"){ %>
    <!-- ACTIONS -->
    <section id="action" class="py-4 mb-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 ml-auto">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <span class="input-group-btn">
                            <button class="btn btn-primary">Search</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- POSTS -->
    <section id="posts">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <h4>All Registered User</h4>
                        </div>
                        <table class="table table-striped">
                            <thead class="thead-inverse">
                                <tr>
                                    <th> FullName</th>
                                    <th>Address</th>
                                    <th>Phone Number</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <% for(var i=0; i< allUser.length; i++){ %>
                                    <td><%= allUser[i].fullName %></td>
                                    <td><%= allUser[i].address %></td>
                                    <td><%= allUser[i].phoneNumber %></td>
                                    <td><%= allUser[i].email %></td>
                                </tr>
                                <% } %>

                            </tbody>
                        </table>

                        <nav class="ml-4">
                            <ul class="pagination">
                                <li class="page-item disabled"><a href="#" class="page-link">Previous</a></li>
                                <li class="page-item active"><a href="#" class="page-link">1</a></li>
                                <li class="page-item"><a href="#" class="page-link">2</a></li>
                                <li class="page-item"><a href="#" class="page-link">3</a></li>
                                <li class="page-item"><a href="#" class="page-link">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <% } %>

    <footer id="main-footer" class="bg-dark text-white mt-5 p-5">
        <div class="conatiner">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">Copyright &copy; 2020 WasteLoop</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('.auto-hide').slideUp(300);
            }, 7000);
        });
    </script>
    
</body>

</html>