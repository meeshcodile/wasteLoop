  <header id="main-header" class="py-2 bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>Report A Waste</h1>
        </div>
      </div>
    </div>
  </header>



  <!-- POSTS -->
  <section id="posts">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h4>Request Page</h4>
            </div>
            <div class="card-body">
              <form method="post" action="/requestpagedetails">
                <div class="form-group">
                  <label for="title">Name</label>
                  <input type="text" class="form-control" value="Name">
                </div>
                <div class="form-group">
                  <label for="title">Address</label>
                  <input type="text" class="form-control" value="Address">
                </div>
                <div class="form-group">
                  <label for="title">Contact</label>
                  <input type="text" class="form-control" value="Contact Person's Phone Number">
                </div>
                <div class="form-group">
                  <label for="title">Pick Up Time</label>
                  <input type="time" class="form-control">
                </div>

                <div class="form-group">
                  <label for="body">Other Details</label>
                  <textarea name="editor1" class="form-control">Fill in any other details</textarea>
                </div>
                <div class="col-md-3">
                  <a href="#" class="btn btn-success btn-block">
                    <i class="fa fa-check"></i>Report</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
    <!-- ACTIONS -->
    <section id="action" class="py-4 mb-4 bg-light">
      <div class="container">
        <div class="row">
          <div class="col-md-3 mr-auto">
            <a href="/contact" class="btn btn-light btn-block">
              <i class="fa fa-arrow-left"></i> Contact Us
            </a>
          </div>
          <div class="col-md-3">
            <a href="#" class="btn btn-success btn-block">
              <i class="fa fa-check"></i>Add Another</a>
          </div>
          <div class="col-md-3">
            <a href="/" class="btn btn-danger btn-block">
              <i class="fa fa-remove"></i> Cancel </a>
          </div>
        </div>
      </div>
    </section>

    <footer id="main-footer" class="bg-dark text-white mt-5 p-5">
      <div class="conatiner">
        <div class="row">
          <div class="col">
            <p class="lead text-center">Copyright &copy; 2020 WasteLoop</p>
          </div>
        </div>
      </div>
    </footer>
  
