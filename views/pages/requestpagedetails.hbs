</head>
<body>
  <div class="site-navbar-wrap js-site-navbar bg-white">
      
    <div class="container">
      <div class="site-navbar bg-light">
        <div class="row align-items-center">
          <div class="col-2">
            <h2 class="mb-0 site-logo"><a href="/" class="font-weight-bold text-uppercase">WasteLoop Cleaners</a></h2>
          </div>
        </div>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
    <div class="container">
      <a href="/" class="navbar-brand">WasteLoop AdminCleaners</a>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item px-2">
            <a href="/" class="nav-link">Home</a>
          </li>
          <li class="nav-item px-2">
            <a href="/adminDash" class="nav-link">Tasks Overview</a>
          </li>
          <li class="nav-item px-2">
            <a href="/users" class="nav-link active">All Users</a>
          </li>
        </ul>

        <ul class="navbar-nav ml-auto">
          <li class="nav-item dropdown mr-3">
            <a href="#" class="nav-link">
              <i class="fa fa-user"></i> Welcome
            </a>
          </li>
          <li class="nav-item">
            <a href="/login" class="nav-link">
              <i class="fa fa-user-times"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
